package weilliptic:token;

interface ierc20 {
    total-supply: func() -> u64;
    balance-of: func(account: string) -> u64;
    transfer: func(to: string, amount: u64) -> bool;
    approve: func(spender: string, amount: u64) -> bool;
    allowance: func(owner: string, spender: string) -> u64;
    transfer-from: func(sender: string, receiver: string, amount: u64) -> bool;
}

world werc20 {
  export ierc20;
}

